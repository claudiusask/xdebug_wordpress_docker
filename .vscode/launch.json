  "version": "0.2.0",
  "configurations": [
          {
          "name": "Listen for XDebug",
          "type": "php",
          "request": "launch",
          "port": 9000,
            // Port Mapping is very important. install php and xdebug in wsl Ubuntu, 
            // and change the ${workspaceFolder}/cms in the below line to the dockers working directory volume 
          "pathMappings": {
              "/var/www/html": "${workspaceFolder}/cms"
          },
          "xdebugSettings": {
              "max_data": 65535,
              "show_hidden": 1,
              "max_children": 100,
              "max_depth": 5
          }
      }
  ]
}
